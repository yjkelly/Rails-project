<div class="well">

  <div class="row">
    <div class="basket_head">
      <h4><%= product.name %></h4>
    </div>
    <div class="basket_main">
      
      <%= form_for basket_item, remote: true do |f| %>
        <h4 class="basket_text_right">Unit Price: <span style="color: green"><%= number_to_currency basket_item.unit_price %></span></h4>
        <div class="basket_row">
          <div class="basket_qty">
            <%= f.number_field :quantity, value: basket_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="basket_button_block">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", basket_item, { data: { confirm: "Are you sure you wish to delete the product '#{basket_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency basket_item.total_price %></span></h4>
      <% end %>
    </div>
    
  </div>
</div>