<!DOCTYPE html>
<html>
<head>
  <title>New Horizons</title>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" %>
  <%= stylesheet_link_tag "/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Droid+Sans|Pacifico" %>

  <%= stylesheet_link_tag "/css/style.css" %>

  <%= yield :css %>

  <%= csrf_meta_tags %>
</head>

  <body>
    <div id='navbar'>
		<div class='logoleft'><%= image_tag("new_horizons_logo.png", :alt => "new horizons logo") %></div>
		<div class='topbar'>
		     <% if logged_in? %>
		     Logged in as <%= current_user.username %>!
		     <% end %>
         <%= render 'layouts/cart_text' %>
		</div>
		<div class='linksbar'>
			<div class='link1' onclick='location.href="/"'>Home</div>
			<div class='link1' onclick='showabout()'>About</div>
			<div class='link1' onclick='location.href="/contact"'>Contact</div>
			<div class='link1' onclick='location.href="/store"'>Store</div>
			   <% if logged_in? %>
			   <div class='link1' onclick='location.href="<%= user_path(current_user) %>"'>Profile</div>
                <div class='link1 link2'><%= link_to "Log out", logout_path, method: "delete" %></div>
                <% else %>
                <div class='link1' onclick='location.href="<%= signup_path %>"'>Register</div>
                <div class='link1' onclick='location.href="<%= login_path %>"'>Login</div>
                <% end %>
		</div>
	</div>
	  <% flash.each do |message_type, message| %>
	  <div class="alert alert-<%= message_type %>"><%= message %></div>
	        <% end %>
    <%= yield %>

    <%= javascript_include_tag "https://code.jquery.com/color/jquery.color-2.1.2.min.js" %>
    <%= javascript_include_tag "https://code.jquery.com/ui/1.12.1/jquery-ui.js" %>
    <%= javascript_include_tag "/js/index.js" %>
    <%= yield :javascript %>
    <%= yield :javascript %>
  </body>
</html>
