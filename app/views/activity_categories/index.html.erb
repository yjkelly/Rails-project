<p id="notice"><%= notice %></p>

<h1>Listing Activity Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_categories.each do |activity_category| %>
      <tr>
        <td><%= activity_category.name %></td>
        <td><%= activity_category.description %></td>
        <td><%= link_to 'Show', activity_category %></td>
        <td><%= link_to 'Edit', edit_activity_category_path(activity_category) %></td>
        <td><%= link_to 'Destroy', activity_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

