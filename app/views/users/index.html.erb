<div id='first'>
<br><br><br>
  <div id='showusers'>

<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Password</th>
      <th>Avatar</th>
      <th>Country</th>
      <% if logged_in? && current_user.is_admin %>
      <th>Is admin</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.avatar %></td>
        <td><%= user.country %></td>
         <% if logged_in? && current_user.is_admin %>
        <td><%= user.is_admin %></td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
         <% if (logged_in? && current_user.is_admin) || (logged_in? && current_user.username == user.username) %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if logged_in? && current_user.is_admin %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
    
  </div>
</div>