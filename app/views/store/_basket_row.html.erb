<div class="basket_box">

  <div class="basket_row">
    <div class="basket_title">
      <h4><%= product.name %></h4>
    </div>
    <div class="basket_unit_price">
      <%= form_for basket_item, remote: true do |f| %>
      <h4>Unit Price: <span style="color: green"><%= number_to_currency basket_item.unit_price %></span></h4>
    </div>
    <div class="basket_main">
        <div class="basket_amend">
          <%= f.number_field :quantity, value: basket_item.quantity.to_i, class: "basket_qty_field", min: 1 %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.submit "Update", action: "update", class: "basket_btn_update" %>
          <%= link_to "Delete", basket_item, { method: :delete, remote: true, class: "basket_btn_delete" } %>
        </div>
        <div class="basket_total">
          <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency basket_item.total_price %></span></h4>
        </div>
      <% end %>
    </div>
    
  </div>
</div>