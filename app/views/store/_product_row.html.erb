<div class="storeitem">
  <img class="itemphoto" src="<%= product.picture %>" alt="<%= product.name %>"/>
  <h3> <%= product.name %> </h3>
  <h4> <%= number_to_currency product.price %> </h4>

  <div>
    <%= form_for basket_item, remote: true do |f| %>
    <label for="qty">Quantity</label>
    <%= f.number_field :quantity, value: 1, class: "qty", min: 1 %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.submit "Add to Cart", class: "basket_btn_update" %>
  </div>
  <% end %>
</div>